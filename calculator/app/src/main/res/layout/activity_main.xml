<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/background">

    <TextView
        android:id="@+id/tvUpperScreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text=""
        android:textColor="@color/screenText"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvLowerScreen"
        app:layout_constraintVertical_bias="0.82">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnPowerOff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/button"
                android:text="@string/powerOf"
                android:textColor="@color/buttonText"
                android:textSize="24sp"
                app:backgroundTint="@color/button" />

            <Button
                android:id="@+id/btnLeftBracket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/button"
                android:text="@string/leftBracket"
                android:textColor="@color/buttonText"
                android:textSize="24sp"
                app:backgroundTint="@color/button" />

            <Button
                android:id="@+id/btnRightBracket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/button"
                android:text="@string/rightBracket"
                android:textColor="@color/buttonText"
                android:textSize="24sp"
                app:backgroundTint="@color/button" />

            <Button
                android:id="@+id/btnDivide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/button"
                android:text="@string/divide"
                android:textColor="@color/buttonText"
                android:textSize="24sp"
                app:backgroundTint="@color/button" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnSeven"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/button"
                android:text="@string/seven"
                android:textColor="@color/buttonText"
                android:textSize="24sp"
                app:backgroundTint="@color/button" />

            <Button
                android:id="@+id/btnEight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/button"
                android:text="@string/eight"
                android:textColor="@color/buttonText"
                android:textSize="24sp"
                app:backgroundTint="@color/button" />

            <Button
                android:id="@+id/btnNine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/button"
                android:text="@string/nine"
                android:textColor="@color/buttonText"
                android:textSize="24sp"
                app:backgroundTint="@color/button" />

            <Button
                android:id="@+id/btnMultiply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/button"
                android:text="@string/multiply"
                android:textColor="@color/buttonText"
                android:textSize="24sp"
                app:backgroundTint="@color/button" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnFour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/button"
                android:text="@string/four"
                android:textColor="@color/buttonText"
                android:textSize="24sp"
                app:backgroundTint="@color/button" />

            <Button
                android:id="@+id/btnFive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/button"
                android:text="@string/five"
                android:textColor="@color/buttonText"
                android:textSize="24sp"
                app:backgroundTint="@color/button" />

            <Button
                android:id="@+id/btnSix"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/button"
                android:text="@string/six"
                android:textColor="@color/buttonText"
                android:textSize="24sp"
                app:backgroundTint="@color/button" />

            <Button
                android:id="@+id/btnMinus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/button"
                android:text="@string/minus"
                android:textColor="@color/buttonText"
                android:textSize="24sp"
                app:backgroundTint="@color/button" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnOne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/button"
                android:text="@string/one"
                android:textColor="@color/buttonText"
                android:textSize="24sp"
                app:backgroundTint="@color/button" />

            <Button
                android:id="@+id/btnTwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/button"
                android:text="@string/two"
                android:textColor="@color/buttonText"
                android:textSize="24sp"
                app:backgroundTint="@color/button" />

            <Button
                android:id="@+id/btnThree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/button"
                android:text="@string/three"
                android:textColor="@color/buttonText"
                android:textSize="24sp"
                app:backgroundTint="@color/button" />

            <Button
                android:id="@+id/btnPlus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/button"
                android:text="@string/plus"
                android:textColor="@color/buttonText"
                android:textSize="24sp"
                app:backgroundTint="@color/button" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnZero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/button"
                android:text="@string/zero"
                android:textColor="@color/buttonText"
                android:textSize="24sp"
                app:backgroundTint="@color/button" />

            <Button
                android:id="@+id/btnDot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/button"
                android:text="@string/dot"
                android:textColor="@color/buttonText"
                android:textSize="24sp"
                app:backgroundTint="@color/button" />

            <Button
                android:id="@+id/btnUndo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/button"
                android:text="@string/undo"
                android:textColor="@color/buttonText"
                android:textSize="24sp"
                app:backgroundTint="@color/button" />

            <Button
                android:id="@+id/btnEqual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/button"
                android:text="@string/equal"
                android:textColor="@color/buttonText"
                android:textSize="24sp"
                app:backgroundTint="@color/button" />

        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/tvLowerScreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text=""
        android:textColor="@color/screenText"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvUpperScreen" />

</androidx.constraintlayout.widget.ConstraintLayout>